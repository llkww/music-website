<%- include('partials/header') %>

    <div class="container my-4">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= album.coverImage %>" alt="<%= album.title %>" class="img-fluid rounded shadow mb-4">
                <h1 class="mb-2">
                    <%= album.title %>
                </h1>
                <p class="mb-1"><strong>歌手:</strong> <a href="/artist/<%= album.artist._id %>">
                        <%= album.artist.name %>
                    </a></p>
                <p class="mb-1"><strong>发行日期:</strong>
                    <%= new Date(album.releaseDate).toLocaleDateString() %>
                </p>
                <p class="mb-1"><strong>流派:</strong>
                    <%= album.genre || '未知' %>
                </p>
                <% if (album.description) { %>
                    <div class="mt-3">
                        <h5>专辑简介</h5>
                        <p>
                            <%= album.description %>
                        </p>
                    </div>
                    <% } %>
            </div>
            <div class="col-md-8">
                <h2 class="mb-3">歌曲列表</h2>
                <% if (album.songs && album.songs.length> 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 50px;">#</th>
                                    <th>歌曲</th>
                                    <th>时长</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% album.songs.forEach((song, index)=> { %>
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="<%= song.coverImage %>" alt="<%= song.title %>"
                                                    class="song-cover me-3" style="width: 40px; height: 40px;">
                                                <a href="/music/song/<%= song._id %>">
                                                    <%= song.title %>
                                                </a>
                                                <% if (song.isVIP) { %><span
                                                        class="badge bg-warning text-dark ms-2">VIP</span>
                                                    <% } %>
                                            </div>
                                        </td>
                                        <td>
                                            <%= Math.floor(song.duration / 60) %>:<%= (song.duration %
                                                    60).toString().padStart(2, '0' ) %>
                                        </td>
                                        <td>
                                            <button class="btn btn-primary rounded-circle btn-play"
                                                data-id="<%= song._id %>" data-title="<%= song.title %>"
                                                data-artist="<%= album.artist.name %>"
                                                data-cover="<%= song.coverImage %>" data-audio="<%= song.audioFile %>">
                                                <i class="bi bi-play-fill"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <p class="text-muted">暂无歌曲信息</p>
                        <% } %>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // 播放按钮事件
            document.querySelectorAll('.btn-play').forEach(button => {
                button.addEventListener('click', function () {
                    const songData = {
                        id: this.dataset.id,
                        title: this.dataset.title,
                        artist: this.dataset.artist,
                        cover: this.dataset.cover,
                        audio: this.dataset.audio
                    };

                    if (window.musicPlayer) {
                        window.musicPlayer.playSong(songData);
                    } else {
                        const audioElement = new Audio(songData.audio);
                        audioElement.play();
                    }
                });
            });
        });
    </script>

    <%- include('partials/footer') %>