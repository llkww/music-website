<%- include('partials/header') %>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="<%= user.avatar %>" alt="头像" class="img-fluid rounded-circle user-avatar mb-3"
                            style="width: 150px; height: 150px; object-fit: cover;">
                        <h4>
                            <%= user.username %>
                        </h4>
                        <p class="text-muted">
                            <%= user.bio %>
                        </p>
                        <% if (user.isVIP) { %>
                            <div class="badge bg-warning text-dark mb-2">VIP会员</div>
                            <% } %>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-primary" data-bs-toggle="modal"
                                        data-bs-target="#avatarModal">
                                        <i class="bi bi-camera"></i> 更换头像
                                    </button>
                                </div>
                    </div>
                </div>

                <div class="list-group mb-4">
                    <a href="#profile-info" class="list-group-item list-group-item-action active" data-bs-toggle="list">
                        <i class="bi bi-person"></i> 基本资料
                    </a>
                    <a href="#my-playlists" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-music-note-list"></i> 我的歌单
                    </a>
                    <a href="#liked-songs" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-heart"></i> 我喜欢的音乐
                    </a>
                    <a href="#play-history" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-clock-history"></i> 播放历史
                    </a>
                    <% if (!user.isVIP) { %>
                        <a href="#vip-upgrade" class="list-group-item list-group-item-action" data-bs-toggle="list">
                            <i class="bi bi-star"></i> 开通VIP
                        </a>
                        <% } else { %>
                            <a href="#vip-info" class="list-group-item list-group-item-action" data-bs-toggle="list">
                                <i class="bi bi-star-fill text-warning"></i> VIP会员
                            </a>
                            <% } %>
                                <a href="#security" class="list-group-item list-group-item-action"
                                    data-bs-toggle="list">
                                    <i class="bi bi-shield-lock"></i> 安全设置
                                </a>
                </div>
            </div>

            <div class="col-md-9">
                <div class="tab-content">
                    <!-- 基本资料 -->
                    <div class="tab-pane fade show active" id="profile-info">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">基本资料</h5>
                            </div>
                            <div class="card-body">
                                <form action="/user/profile" method="POST">
                                    <div class="mb-3">
                                        <label for="username" class="form-label">用户名</label>
                                        <input type="text" class="form-control" id="username" name="username"
                                            value="<%= user.username %>" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">电子邮箱</label>
                                        <input type="email" class="form-control" id="email" value="<%= user.email %>"
                                            readonly>
                                        <div class="form-text">邮箱不可修改</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="bio" class="form-label">个性签名</label>
                                        <textarea class="form-control" id="bio" name="bio"
                                            rows="3"><%= user.bio %></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">性别</label>
                                        <div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="gender-male" value="male" <%=user.gender==='male' ? 'checked'
                                                    : '' %>>
                                                <label class="form-check-label" for="gender-male">男</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="gender-female" value="female" <%=user.gender==='female'
                                                    ? 'checked' : '' %>>
                                                <label class="form-check-label" for="gender-female">女</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="gender-other" value="other" <%=user.gender==='other' ? 'checked'
                                                    : '' %>>
                                                <label class="form-check-label" for="gender-other">其他</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="birthday" class="form-label">生日</label>
                                        <input type="date" class="form-control" id="birthday" name="birthday"
                                            value="<%= user.birthday ? user.birthday.toISOString().split('T')[0] : '' %>">
                                    </div>
                                    <button type="submit" class="btn btn-primary">保存修改</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- 我的歌单 -->
                    <div class="tab-pane fade" id="my-playlists">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">我的歌单</h5>
                                <a href="/playlist/create" class="btn btn-sm btn-primary">
                                    <i class="bi bi-plus-lg"></i> 创建歌单
                                </a>
                            </div>
                            <div class="card-body">
                                <% if (playlists && playlists.length> 0) { %>
                                    <div class="row">
                                        <% playlists.forEach(playlist=> { %>
                                            <div class="col-md-4 mb-4">
                                                <div class="card h-100">
                                                    <img src="<%= playlist.coverImage %>" class="card-img-top"
                                                        alt="<%= playlist.name %>">
                                                    <div class="card-body">
                                                        <h5 class="card-title">
                                                            <%= playlist.name %>
                                                        </h5>
                                                        <p class="card-text text-muted">
                                                            <%= playlist.songs.length %> 首歌曲
                                                        </p>
                                                        <p class="card-text small">
                                                            <%= playlist.description %>
                                                        </p>
                                                        <a href="/playlist/<%= playlist._id %>"
                                                            class="btn btn-outline-primary btn-sm">
                                                            <i class="bi bi-music-note-list"></i> 查看详情
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                    <% } else { %>
                                        <div class="text-center py-5">
                                            <i class="bi bi-music-note-list display-1 text-muted"></i>
                                            <p class="mt-3">您还没有创建歌单</p>
                                            <a href="/playlist/create" class="btn btn-primary">
                                                <i class="bi bi-plus-lg"></i> 创建歌单
                                            </a>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- 喜欢的音乐 -->
                    <div class="tab-pane fade" id="liked-songs">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">我喜欢的音乐</h5>
                            </div>
                            <div class="card-body">
                                <!-- 此处内容通过AJAX加载 -->
                                <div class="text-center py-5" id="liked-songs-loader">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">加载中...</span>
                                    </div>
                                    <p class="mt-3">加载中...</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 播放历史 -->
                    <div class="tab-pane fade" id="play-history">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">播放历史</h5>
                            </div>
                            <div class="card-body">
                                <!-- 此处内容通过AJAX加载 -->
                                <div class="text-center py-5" id="history-loader">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">加载中...</span>
                                    </div>
                                    <p class="mt-3">加载中...</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- VIP开通 -->
                    <div class="tab-pane fade" id="vip-upgrade">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">VIP会员</h5>
                            </div>
                            <div class="card-body">
                                <div class="text-center mb-4">
                                    <i class="bi bi-star-fill display-1 text-warning"></i>
                                    <h3 class="mt-3">开通VIP，享受更多特权</h3>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 mb-4">
                                        <div class="card h-100">
                                            <div class="card-header text-center bg-primary text-white">
                                                <h5 class="mb-0">月度会员</h5>
                                            </div>
                                            <div class="card-body text-center">
                                                <h3 class="card-title mb-3">¥18/月</h3>
                                                <ul class="list-unstyled">
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 无损音质</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 专属皮肤</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 免费下载</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 无广告体验</li>
                                                </ul>
                                                <div class="mt-3">
                                                    <button class="btn btn-primary btn-open-vip"
                                                        data-plan="monthly">立即开通</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4 mb-4">
                                        <div class="card h-100 border-primary">
                                            <div class="card-header text-center bg-primary text-white">
                                                <h5 class="mb-0">季度会员</h5>
                                                <span class="badge bg-warning text-dark">最受欢迎</span>
                                            </div>
                                            <div class="card-body text-center">
                                                <h3 class="card-title mb-3">¥48/季度</h3>
                                                <ul class="list-unstyled">
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 无损音质</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 专属皮肤</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 免费下载</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 无广告体验</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 私人定制歌单</li>
                                                </ul>
                                                <div class="mt-3">
                                                    <button class="btn btn-primary btn-open-vip"
                                                        data-plan="quarterly">立即开通</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4 mb-4">
                                        <div class="card h-100">
                                            <div class="card-header text-center bg-primary text-white">
                                                <h5 class="mb-0">年度会员</h5>
                                                <span class="badge bg-danger">超值</span>
                                            </div>
                                            <div class="card-body text-center">
                                                <h3 class="card-title mb-3">¥168/年</h3>
                                                <ul class="list-unstyled">
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 无损音质</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 专属皮肤</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 免费下载</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 无广告体验</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 私人定制歌单</li>
                                                    <li><i class="bi bi-check-circle-fill text-success"></i> 优先客服支持</li>
                                                </ul>
                                                <div class="mt-3">
                                                    <button class="btn btn-primary btn-open-vip"
                                                        data-plan="yearly">立即开通</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <form id="vip-form" class="d-none">
                                    <input type="hidden" name="vip-plan" id="vip-plan" value="monthly">
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- VIP信息 -->
                    <div class="tab-pane fade" id="vip-info">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">VIP会员信息</h5>
                            </div>
                            <div class="card-body">
                                <div class="text-center mb-4">
                                    <i class="bi bi-star-fill display-1 text-warning"></i>
                                    <h3 class="mt-3">您是尊贵的VIP会员</h3>
                                    <p class="text-muted">
                                        会员到期时间：<span id="vip-expiry">
                                            <%= user.vipExpiry ? user.vipExpiry.toLocaleDateString() : '未知' %>
                                        </span>
                                    </p>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <div class="card">
                                            <div class="card-header bg-warning text-dark">
                                                <h5 class="mb-0">会员特权</h5>
                                            </div>
                                            <div class="card-body">
                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item">
                                                        <i class="bi bi-music-note-beamed text-primary"></i> 无损音质播放
                                                    </li>
                                                    <li class="list-group-item">
                                                        <i class="bi bi-palette text-primary"></i> 专属皮肤
                                                    </li>
                                                    <li class="list-group-item">
                                                        <i class="bi bi-download text-primary"></i> 歌曲下载特权
                                                    </li>
                                                    <li class="list-group-item">
                                                        <i class="bi bi-ban text-primary"></i> 无广告体验
                                                    </li>
                                                    <li class="list-group-item">
                                                        <i class="bi bi-headset text-primary"></i> 优先客服支持
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="card h-100">
                                            <div class="card-header bg-primary text-white">
                                                <h5 class="mb-0">会员续费</h5>
                                            </div>
                                            <div class="card-body">
                                                <p>选择续费套餐：</p>
                                                <div class="form-check mb-2">
                                                    <input class="form-check-input" type="radio" name="renewal-plan"
                                                        id="renewal-monthly" value="monthly" checked>
                                                    <label class="form-check-label" for="renewal-monthly">
                                                        月度会员 - ¥18/月
                                                    </label>
                                                </div>
                                                <div class="form-check mb-2">
                                                    <input class="form-check-input" type="radio" name="renewal-plan"
                                                        id="renewal-quarterly" value="quarterly">
                                                    <label class="form-check-label" for="renewal-quarterly">
                                                        季度会员 - ¥48/季度 <span class="badge bg-warning text-dark">推荐</span>
                                                    </label>
                                                </div>
                                                <div class="form-check mb-3">
                                                    <input class="form-check-input" type="radio" name="renewal-plan"
                                                        id="renewal-yearly" value="yearly">
                                                    <label class="form-check-label" for="renewal-yearly">
                                                        年度会员 - ¥168/年 <span class="badge bg-danger">超值</span>
                                                    </label>
                                                </div>
                                                <button class="btn btn-primary">立即续费</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 安全设置 -->
                    <div class="tab-pane fade" id="security">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">修改密码</h5>
                            </div>
                            <div class="card-body">
                                <form>
                                    <div class="mb-3">
                                        <label for="current-password" class="form-label">当前密码</label>
                                        <input type="password" class="form-control" id="current-password" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="new-password" class="form-label">新密码</label>
                                        <input type="password" class="form-control" id="new-password" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="confirm-new-password" class="form-label">确认新密码</label>
                                        <input type="password" class="form-control" id="confirm-new-password" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary">修改密码</button>
                                </form>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">登录设备管理</h5>
                            </div>
                            <div class="card-body">
                                <div class="list-group">
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Chrome / Windows</h6>
                                                <p class="mb-0 text-muted small">上海市 - 当前设备</p>
                                            </div>
                                            <span class="badge bg-success">当前在线</span>
                                        </div>
                                    </div>
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Safari / iPhone</h6>
                                                <p class="mb-0 text-muted small">北京市 - 最近登录: 2023-06-15 10:30</p>
                                            </div>
                                            <button class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-x-lg"></i> 下线
                                            </button>
                                        </div>
                                    </div>
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Firefox / Mac</h6>
                                                <p class="mb-0 text-muted small">广州市 - 最近登录: 2023-06-10 18:45</p>
                                            </div>
                                            <button class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-x-lg"></i> 下线
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">登录记录</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>登录时间</th>
                                                <th>IP地址</th>
