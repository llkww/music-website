<%- include('partials/header') %>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">创建歌单</h2>
                    </div>
                    <div class="card-body">
                        <form action="/playlist/create" method="POST">
                            <div class="mb-3">
                                <label for="playlist-name" class="form-label">歌单名称</label>
                                <input type="text" class="form-control" id="playlist-name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="playlist-description" class="form-label">歌单描述</label>
                                <textarea class="form-control" id="playlist-description" name="description"
                                    rows="3"></textarea>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="playlist-public" name="isPublic"
                                    value="true" checked>
                                <label class="form-check-label" for="playlist-public">公开歌单</label>
                                <div class="form-text">勾选后其他用户可以查看此歌单</div>
                            </div>
                            <div class="text-end">
                                <button type="submit" class="btn btn-primary">创建歌单</button>
                                <a href="/playlist/user-playlists" class="btn btn-outline-secondary">取消</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>