<%- include('partials/header') %>

    <div class="container my-4">
        <h1 class="mb-4">我的歌单</h1>

        <div class="d-flex justify-content-end mb-3">
            <a href="/playlist/create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> 创建歌单
            </a>
        </div>

        <% if (playlists.length> 0) { %>
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                <% playlists.forEach(playlist=> { %>
                    <div class="col">
                        <div class="card h-100 playlist-card">
                            <img src="<%= playlist.coverImage %>" class="card-img-top" alt="<%= playlist.name %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= playlist.name %>
                                </h5>
                                <p class="card-text text-muted">
                                    <%= playlist.songs.length %> 首歌曲
                                </p>
                                <p class="card-text small">
                                    <%= playlist.description %>
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="/playlist/<%= playlist._id %>" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-music-note-list"></i> 查看详情
                                    </a>
                                    <span class="text-muted small">
                                        <i class="bi bi-eye"></i>
                                        <%= playlist.playCount %>
                                            <i class="bi bi-heart ms-2"></i>
                                            <%= playlist.likes %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-music-note-list display-1 text-muted"></i>
                    <p class="mt-3">您还没有创建歌单</p>
                    <a href="/playlist/create" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> 创建歌单
                    </a>
                </div>
                <% } %>
    </div>

    <%- include('partials/footer') %>